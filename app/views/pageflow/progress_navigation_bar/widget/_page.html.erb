<li class="<%= page_navigation_css_class(page) %>">
  <%= link_to "##{page.perma_id}", :data => {:link => page.id} do %>
  <% end %>
  <div class="navigation_site_detail progress_navigation">
    <% if chapters_count > 1 %>
    <h2>
      <span class="chapter_number"><%= "#{I18n.t('pageflow.progress_navigation_bar.chapter')} #{page.chapter.position + 1}" %></span>
      <span class="chapter_title"><%= page.chapter.title %></span>
    </h2>
    <hr />
    <% end %>
    <%= page.title %>

    <%= image_tag("pageflow/#{page.template}_pictogram.png", :style => "background-image: url('#{page.thumbnail_url(:navigation_thumbnail_large)}')") %>
  </div>
</li>
